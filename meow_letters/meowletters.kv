#:kivy 1.8.0
#:set letter_size 70

<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Meow Letters"
        Button:
            text: 'New game'
            on_press: root.manager.current = 'game'
        Button:
            text: 'Highscores'
            on_press: root.manager.current = 'highscores'
        Button:
            text: "Settings"
            on_press: root.manager.current = 'settings'

