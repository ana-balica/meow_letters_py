#:kivy 1.8.0
#:set white (1, 1, 1, 1)
#:set light_brown (0xE7 / 255., 0xC7 / 255., 0x83 / 255.)
#:set brown (0xB8 / 255., 0x91 / 255., 0x3D / 255., 1)
#:set dark_brown (0x77 / 255., 0x6e / 255., 0x65 / 255., 1.)
#:set light_grey (0xFA / 255., 0xF8 / 255., 0xEF / 255.)
#:set grey (0xBB / 255., 0xAD / 255., 0xA0 / 255.)
#:set light_blue (0xe0 / 255., 0xe0 / 255., 0xe0 / 255.)
#:set dark_blue (0x28 / 255., 0x5D / 255., 0x74 / 255., 1.)


<MenuButton@Button>:
	background_color: dark_blue
	background_normal: 'assets/img/mask_rounded_corners.png'
	background_down: 'assets/img/mask_rounded_corners.png'
	font_size: '20dp'
	bold: True
	size_hint: (1.0, 0.3)

<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: '30dp', '10dp', '30dp', '140dp'
        spacing: '8dp'
        canvas:
            Color:
                rgb: light_blue
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Meow Letters"
            font_name: 'assets/fonts/Roboto-Light.ttf'
            font_size: min(root.height, root.width) / 8.
            color: dark_brown
            bold: True
        MenuButton:
            text: 'New game'
            on_press: root.manager.current = 'game'
        MenuButton:
            text: 'Highscores'
            on_press: root.manager.current = 'highscores'
        MenuButton:
            text: "Settings"
            on_press: root.manager.current = 'settings'

<GameOverScreen>:
    Label:
        text: "This is going to be the game over screen"

<HighscoresScreen>:
    Label:
        text: "This is going to be the highscores screen"

<SettingsScreen>:
    username_input: username_input
    canvas:
        Color:
            rgb: light_blue
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: '30dp', self.height / 2
        spacing: '10dp'
        Label:
            text: 'Username'
            color: dark_brown
            size_hint_y: None
            font_size: min(root.height, root.width) / 14.
        TextInput:
            id: username_input
            size_hint_y: None
            height: min(root.height, root.width) / 8.
            font_size: min(root.height, root.width) / 20.
            multiline: False
            padding: [10, (self.height-self.font_size)/2.5]
            foreground_color: dark_brown

<Letter>:
	canvas.before:
		PushMatrix
		Translate:
			xy: self.center_x, self.center_y
		Scale:
			xyz: root.scale, root.scale, 0
		Translate:
			xy: -self.center_x, -self.center_y
	canvas.after:
		PopMatrix

	canvas:
		Color:
			rgb: light_brown
		BorderImage:
			pos: self.pos
			size: self.size
			source: 'assets/img/mask.png'

	Label:
	    color: brown
		text: root.letter
		font_size: min(self.height, self.width) / 2.5
		bold: True
		size: root.size
		center: root.center

<BoxButton@ButtonBehavior+BoxLayout>:
	source: ''
	orientation: 'vertical'
	padding: '8dp'
	canvas.before:
		Color:
			rgb: grey
		BorderImage:
			pos: self.pos
			size: self.size
			source: 'assets/img/mask.png'

	Image:
		source: root.source

<TextButton@Button>:
	color: white
	background_color: dark_blue
	background_normal: 'assets/img/mask.png'
	background_down: 'assets/img/mask.png'
	size_hint_y: None
	height: '48dp'
	font_size: '20dp'
	bold: True

<GameScreen>:
    BoxLayout:
        padding: '10dp'
        spacing: '10dp'
        orientation: 'vertical' if self.height > self.width else 'horizontal'
        canvas:
            Color:
                rgb: light_blue
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical' if root.height > root.width else 'horizontal'
            size_hint_y: .25 if root.height > root.width else 1

            BoxLayout:
                spacing: '34dp'
                padding: '15dp'
                orientation: 'vertical'

                Label:
                    text: 'Meow Letters'
                    font_name: 'assets/fonts/Roboto-Light.ttf'
                    font_size: min(root.height, root.width) / 10.
                    color: dark_brown
                    bold: True
                Label:
                    text: 'Level ' + str(game.level)
                    color: dark_blue
                    font_name: 'assets/fonts/Roboto-Light.ttf'
                    font_size: root.height / 14
                    bold: True
                    halign: 'left'
                Label:
                    text: 'Score ' + str(game.score)
                    color: dark_blue
                    font_name: 'assets/fonts/Roboto-Light.ttf'
                    font_size: root.height / 18
                    bold: True

        AnchorLayout:
            id: anchor

            Game:
                id: game
                size_hint: None, None
                size: [min(anchor.width, anchor.height)] * 2
                on_size: self.reposition()
                on_pos: self.reposition()


<Game>:
	AnchorLayout:
		id: end
		pos: root.pos
		size: root.size
		opacity: 0

		canvas:
			Color:
				rgb: light_grey
				#TODO set relative opacity: self.opacity - 0.2
			BorderImage:
				pos: self.pos
				size: self.size
				source: 'assets/img/mask.png'

		BoxLayout:
			orientation: 'vertical'
			padding: '10dp'
			spacing: '20dp'

			Label:
				id: end_label
				font_size: min(self.height, self.width) / 3.
				color: dark_blue
				bold: True
				text: 'Game\nover!'
				halign: 'center'

			TextButton:
				text: 'Restart'
				on_press: root.restart() if end.opacity == 1. else None
				font_size: '20dp'
